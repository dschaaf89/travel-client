@model TravelClient.Models.Review
<h1>Edit:</h1>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ReviewId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Destination)</td>
      <td>@Html.EditorFor(model => model.Destination)</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.ReviewDetails)</td>
      <td>@Html.EditorFor(model => model.ReviewDetails)</td>
    </tr> 
    <tr>
      <td>@Html.LabelFor(model => model.Country)</td>
      <td>@Html.EditorFor(model => model.Country)</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.City)</td>
      <td>@Html.EditorFor(model => model.City)</td>
    </tr>
    <tr>
      <td>@Html.LabelFor(model => model.Rating)</td>
      <td>@Html.EditorFor(model => model.Rating, new { type="number", min="0", max="5"})</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-default fa" ><i class="fa-user-plus"> Save</i></button>
}